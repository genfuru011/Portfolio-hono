{
  "name": "portfolio-hono",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:frontend": "pnpm --filter portfolio-frontend dev",
    "dev:backend": "pnpm --filter portfolio-backend dev",
    "dev:both": "pnpm --filter portfolio-backend run build:content && pnpm -r --parallel dev",
    "deploy:backend": "pnpm --filter portfolio-backend deploy"
  }
}
